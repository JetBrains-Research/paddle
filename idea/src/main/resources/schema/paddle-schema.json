{
  "title": "Paddle.build",
  "description": "Configuration of Paddle build",
  "type": "object",
  "required": [
    "descriptor"
  ],
  "properties": {
    "descriptor": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "description": "Name of the project",
          "type": "string"
        },
        "version": {
          "description": "Version of the project",
          "type": "string"
        }
      }
    },
    "roots": {
      "description": "Roots of the projects",
      "type": "object",
      "properties": {
        "sources": {
          "description": "Sources locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tests": {
          "description": "Tests locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "description": "Resources locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "executor": {
      "description": "Executor to be used by Paddle to execute build commands",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "local"
          ]
        }
      }
    },
    "environment": {
      "description": "Environment that should be used by Paddle for Python build process",
      "properties": {
        "required": [
          "path",
          "python"
        ],
        "path": {
          "description": "Path to the virtual environment location",
          "type": "string"
        },
        "python": {
          "description": "Version of Python interpreter to be used",
          "type": "string"
        }
      }
    },
    "repositories": {
      "description": "List of the available PyPI repositories",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "url"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "default": {
            "type": "boolean"
          },
          "secondary": {
            "type": "boolean"
          }
        }
      }
    },
    "requirements": {
      "description": "List of project requirements",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "repository": {
            "type": "string"
          }
        }
      }
    },
    "plugins": {
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Array of enabled plugins identifiers",
          "type": "array",
          "items": {
            "type": "string",
            "enum": []
          }
        },
        "jars": {
          "description": "Array of paths to jars with custom plugins",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tasks": {
      "type": "object",
      "properties": {
        "linter": {
          "type": "object",
          "properties": {
            "mypy": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            },
            "pylint": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "tests": {
          "type": "object",
          "properties": {
            "pytest": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "run": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "entrypoint": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
