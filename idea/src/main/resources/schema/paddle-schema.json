{
  "title": "Paddle.build",
  "description": "Configuration of Paddle build",
  "type": "object",
  "required": [
    "descriptor"
  ],
  "properties": {
    "descriptor": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "description": "Name of the project",
          "type": "string"
        },
        "version": {
          "description": "Version of the project",
          "type": "string"
        }
      }
    },
    "roots": {
      "description": "Roots of the projects",
      "type": "object",
      "properties": {
        "sources": {
          "description": "Sources locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tests": {
          "description": "Tests locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "description": "Resources locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "executor": {
      "description": "Executor to be used by Paddle to execute build commands",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "local"
          ]
        }
      }
    },
    "plugins": {
      "type": "object",
      "properties": {
        "repositories": {
          "description": "List of available plugins repositories",
          "type": "array",
          "items": {
            "type": "object",
            "enum": [
              {
                "description": "Local Jar plugins repository",
                "type": "object",
                "required": [
                  "name",
                  "type"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "jar": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        },
        "enabled": {
          "description": "List of enabled plugins",
          "type": "object",
          "properties": {
            "embedded": {
              "description": "Plugins which includes in Paddle's distribution",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "local": {
              "description": "Plugins from locals repositories such as .jar file or directory with Python module",
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "repository"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "repository": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "tasks": {
      "type": "object",
      "properties": {
        "linter": {
          "type": "object",
          "properties": {
            "mypy": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            },
            "pylint": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "tests": {
          "type": "object",
          "properties": {
            "pytest": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "run": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "entrypoint": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
